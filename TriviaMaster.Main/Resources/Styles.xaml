<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style for all buttons in the application -->
    <Style x:Key="RoundedButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#3A3A5C"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="10,10"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover effect -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#4A4A6D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style specifically for answer buttons -->
    <Style x:Key="AnswerButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
        <Setter Property="Background" Value="#292A4B"/>
    </Style>

    <Style x:Key="NeonButtonStyle" TargetType="Button" BasedOn="{StaticResource AnswerButtonStyle}">
        <!-- הוספת אפקט הניאון -->
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Cyan" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="Lime"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Lime" BlurRadius="20" ShadowDepth="0" Opacity="0.9"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="BorderBrush" Value="Magenta"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Magenta" BlurRadius="20" ShadowDepth="0" Opacity="1.0"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Style specifically for topic buttons -->
    <Style x:Key="TopicButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Width" Value="240"/>
        <Setter Property="Background" Value="#3A3A5C"/>
    </Style>

</ResourceDictionary>
